@page
@model DesksModel
@{
    ViewData["Title"] = "Desks";
    var size = 12 / Model.Desks.Count();
}

<h1 class="display-4">Desks</h1>

<p class="lead">Here you see a list with all desks available at our huddle office in Managua.</p>

<hr />


<div class="row">
    <div class="col-12 mx-auto">

        <div class="">
            @foreach (var desk in Model.Desks)
            {
                <div class="card mr-3 mt-3" style="min-width: 180px; max-width: 250px; display: inline-table;">
                    <img src="/images/worker.debbdd74.png" class="card-img-top" alt="Desk Image">
                    <div class="card-body d-flex flex-column">
                        <p class="card-text">@desk.Description</p>
                        <div class="btn-group">
                            <button type="button"
                                id="editDesk"
                                class="btn btn-success"
                                title="Edit Desk">
                               <span class="fa fa-pen-to-square"></span>
                            </button>
                            <button type="button"
                                id="deleteDesk"
                                class="btn btn-warning"
                                title="Delete Desk">
                                <span class="fa fa-trash"></span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

