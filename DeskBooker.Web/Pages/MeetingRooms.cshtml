@page
@model DeskBooker.Web.Pages.MeetingRoomsModel
@{
    ViewData["Title"] = "Meeting Rooms";
    var size = 12 / Model.MeetingRooms.Count();
}

<h1 class="display-4">Meeting Rooms</h1>

<p class="lead">Here you see our meeting rooms available at our huddle office in Managua.</p>

<hr />

<div class="row">
    <div class="col-12 mx-auto">

        <div class="card-group">
            @foreach (var meetingRoom in Model.MeetingRooms)
            {
                <div class="card mb-2 ml-3 col-@size" style="width: 18rem;">
                    <img src="@meetingRoom.ImageUrl" class="card-img-top" alt="@meetingRoom.RoomName" style="max-height: 200px; min-height: 200px;">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">@meetingRoom.RoomName</h4>
                        <h6 class="card-subtitle text-muted mb-2">
                            up to @meetingRoom.MaxPeopleAllowed people"
                        </h6>
                        <p class="card-text" style="min-height: 150px;">@meetingRoom.RoomDescription</p>
                        <div class="btn-group">
                            <button type="button"
                                id="editRoom"
                                class="btn btn-success"
                                title="Edit Meeting Room">
                                <span class="fa fa-pen-to-square"></span>
                            </button>
                            <button type="button"
                                id="deleteRoom"
                                class="btn btn-warning"
                                title="Delete Meeting Room">
                                <span class="fa fa-trash"></span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


